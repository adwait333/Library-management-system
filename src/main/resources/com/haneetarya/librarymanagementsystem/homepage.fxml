         <font>
            <Font size="30.0" />
         </font>
      </Button>
      <ButtonBar layoutX="11.0" layoutY="524.0" prefHeight="40.0" prefWidth="445.0">
        <buttons>
          <Button fx:id="studentList" mnemonicParsing="false" onAction="#getStudentList" text="Student List">
               <font>
                  <Font size="19.0" />
               </font>
            </Button>
            <Button fx:id="booklist" mnemonicParsing="false" onAction="#getBookList" text="Book List">
               <font>
                  <Font size="19.0" />
               </font>
            </Button>
            <Button fx:id="borrowlist" mnemonicParsing="false" onAction="#getBorrowList" text="Borrow List">
               <font>
                  <Font size="19.0" />
               </font>
            </Button>
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
