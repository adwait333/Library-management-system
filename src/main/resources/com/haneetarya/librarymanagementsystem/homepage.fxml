<AnchorPane prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.haneetarya.librarymanagementsystem.Homepage">
   <children>
      <RadioButton fx:id="issue" layoutX="212.0" layoutY="274.0" mnemonicParsing="false" prefHeight="40.0" text="Issue Book">
         <font>
            <Font size="24.0" />
         </font></RadioButton>
      <RadioButton fx:id="submit" layoutX="391.0" layoutY="272.0" mnemonicParsing="false" prefHeight="40.0" text="Submit Book">
         <font>
            <Font size="24.0" />
         </font></RadioButton>
      <RadioButton fx:id="addStudent" layoutX="569.0" layoutY="268.0" mnemonicParsing="false" prefHeight="40.0" text="Add Student">
         <font>
            <Font size="24.0" />
         </font></RadioButton>
      <RadioButton fx:id="addBook" layoutX="774.0" layoutY="267.0" mnemonicParsing="false" prefHeight="40.0" text="Add Book">
         <font>
            <Font size="24.0" />
         </font></RadioButton>
      <Button fx:id="go" layoutX="514.0" layoutY="369.0" mnemonicParsing="false" onAction="#submit" prefHeight="45.0" prefWidth="131.0" text="Go">
